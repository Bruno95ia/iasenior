# Banco de Dados PostgreSQL (Docker)
DB_ENABLED=true
DB_NAME=iasenior
DB_USER=iasenior
DB_PASSWORD=iasenior
DB_HOST=localhost
DB_PORT=5432

# Notificações
NOTIFICATIONS_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_app
SMTP_USE_TLS=true
NOTIFICATION_EMAILS=cuidador1@email.com,cuidador2@email.com

# Configurações do Stream RTSP
RTSP_HOST=localhost
RTSP_PORT=8554
STREAM_NAME=ia

# Configurações de captura
MONITOR_IDX=3
FRAME_WIDTH=1280
FRAME_HEIGHT=720
FPS=20

# Configurações do modelo YOLO
MODEL_PATH=yolov8n.pt
CONFIDENCE_THRESHOLD=0.4

# Configurações de detecção
FALL_DETECTION_ENABLED=true
TRACKING_ENABLED=true
ROOM_COUNT_ENABLED=true
ROOM_USE_AREA=false
ROOM_X1=0.0
ROOM_Y1=0.0
ROOM_X2=1.0
ROOM_Y2=1.0

# Configurações de banheiro
BATHROOM_MONITORING_ENABLED=true
BATHROOM_TIME_LIMIT_MINUTES=10
BATHROOM_X1=0.6
BATHROOM_Y1=0.0
BATHROOM_X2=1.0
BATHROOM_Y2=1.0

# Configurações do Streamlit
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501
REFRESH_INTERVAL=3
